@model IEnumerable<PizzaDominos.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>QUẢN LÝ THÔNG TIN SẢN PHẨM</h2>
<hr />
<table class="table">
    <tr>
        <th>
            TÊN SẢN PHẨM
        </th>
        <th>
            HÌNH ẢNH SẢN PHẨM
        </th>
        <th>
            HÌNH NỀN ẢNH
        </th>
        <th>
            MÔ TẢ SẢN PHẨM
        </th>
        <th>
            LOẠI SẢN PHẨM
        </th>
        <th>
            LOẠI NHÂN BÁNH
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @*@Html.DisplayFor(modelItem => item.ProName)*@
                @Html.DisplayFor(modelItem => item.ProName)
            </td>
            <td>
                <img src="@Url.Content(item.ProImage)" width="100" />
            </td>
            <td>
                <img src="@Url.Content(item.Thumnail)" width="100" />
            </td>
            <td class="col-lg-4">
                @Html.DisplayFor(modelItem => item.NameDecription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CateName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Filling.FillingName)
            </td>
            <td>
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ProID }, new { @class = "btn btn-sm btn-info" }) |
                @Html.ActionLink("Sửa", "Edit", new { id = item.ProID }, new { @class = "btn btn-sm btn-success" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ProID }, new { @class = "btn btn-sm btn-danger" })
            </td>
        </tr>
    }
    
    </table>
<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
</p>
