@model PizzaDominos.Models.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    textarea {
        width: 100%;
        height: 150px;
        border: 1px ridge;
        border-radius: 5px;
        padding: 10px 10px;
    }
</style>
<h2>NHẬP SẢN PHẨM</h2>


@using (Html.BeginForm("Create", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="display: flex; padding-top: 8px">
            <div class="control-label col-md-2">
                TÊN SẢN PHẨM
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ProName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display:flex; padding-top:8px">
            <div class="control-label col-md-2">
                LOẠI SẢN PHẨM
            </div>
            <div class="col-md-10">
                @Html.DropDownList("CatID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CatID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display:flex; padding-top:8px">
            <div class="control-label col-md-2">
                LOẠI NHÂN BÁNH
            </div>
            <div class="col-md-10">
                @Html.DropDownList("FillingID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FillingID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display:flex; padding-top:8px">
            <div class="control-label col-sm-2">HÌNH ẢNH</div>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.UploadProImage, htmlAttributes: new { @type = "file" })
                @Html.ValidationMessageFor(model => model.UploadProImage, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display:flex; padding-top:8px">
            <div class="control-label col-sm-2">Thumnail</div>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.UploadThumnail, htmlAttributes: new { @type = "file" })
                @Html.ValidationMessageFor(model => model.UploadThumnail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display:flex; padding-top:8px">
            <div class="control-label col-md-2">
                MÔ TẢ SẢN PHẨM
            </div>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.NameDecription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NameDecription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10" style="padding-left:16.7%">
                <input type="submit" value="Thêm mới" class="btn btn-primary" />
                @Html.ActionLink("Danh sách", "Index", null, new { @class = "btn btn-info" })
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
