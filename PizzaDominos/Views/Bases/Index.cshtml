@model IEnumerable<PizzaDominos.Models.Base>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>QUẢN LÝ LOẠI ĐẾ BÁNH</h2>

<table class="table">
    <tr>
        <th>
            MÃ LOẠI ĐẾ BÁNH
        </th>
        <th>
            TÊN ĐẾ BÁNH
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="btn-sm">
            <td>
                @Html.DisplayFor(modelItem => item.BaseID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BaseName)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.BaseID }, new { @class = "btn btn-sm btn-success" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.BaseID }, new { @class = "btn btn-sm btn-danger" })
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
</p>
