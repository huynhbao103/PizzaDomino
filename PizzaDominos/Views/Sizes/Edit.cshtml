@model PizzaDominos.Models.Size

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">QUẢN LÝ LOẠI HÀNG HÓA</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SizeID)

        <div class="form-group">
            <div class="control-label col-md-2">TÊN LOẠI HÀNG HÓA</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SizeName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SizeName, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="padding-top:10px">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
                @Html.ActionLink("Danh sách", "Index", null, new { @class = "btn btn-info" })
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
