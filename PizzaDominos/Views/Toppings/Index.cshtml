@model IEnumerable<PizzaDominos.Models.Topping>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý loại topping</h2>
<table class="table">
    <tr>
        <th>
            TÊN LOẠI TOPPING
        </th>
        <th>
            GIÁ TIỀN
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ToppingName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ToppingID }) |

                @Html.ActionLink("Xóa", "Delete", new { id = item.ToppingID })
            </td>
        </tr>
    }
    <p>
        @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
    </p>

</table>
